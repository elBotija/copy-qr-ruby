%main.form-signin.w-100.m-auto.bg-white.rounded-3.shadow-lg.p-4.d-flex.flex-wrap.justify-center
  = image_tag 'logo-login.png', class: 'mb-2', height: '100%', width: '100%'

  %div.w-100
    %h1.h3.mb-3.fw-normal= t('.sign_in')

    = form_for(resource, as: resource_name, url: session_path(resource_name)) do |f|
      .form-floating
        = f.email_field :email,
          class: 'form-control',
          placeholder: 'nombre@ejemplo.com',
          required: true,
          autocomplete: 'email'
        = f.label :email

      .form-floating
        = f.password_field :password,
          class: 'form-control',
          placeholder: t('.password'),
          required: true,
          autocomplete: 'current-password'
        = f.label :password

      - if devise_mapping.rememberable?
        .form-check.text-start.mt-3
          = f.check_box :remember_me, class: 'form-check-input'
          = f.label :remember_me, class: 'form-check-label small'

      .actions.mt-3
        = f.submit t('.sign_in'), class: 'btn btn-primary w-100 py-2'

    .mt-3= render 'devise/shared/links'
